{
  "dashboard": {
    "id": null,
    "title": "Spring Boot Demo Monitoring",
    "tags": ["spring-boot", "demo"],
    "timezone": "browser",
    "panels": [
      {
        "title": "HTTP Requests per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(endpoint_requests_total[5m])",
            "legendFormat": "{{endpoint}} endpoint"
          }
        ],
        "xAxis": {"show": true},
        "yAxes": [{"label": "requests/sec"}]
      },
      {
        "title": "Application Health",
        "type": "singlestat",
        "targets": [
          {
            "expr": "up{job=\"demo-release-demo\"}",
            "legendFormat": "App Status"
          }
        ]
      },
      {
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{job=\"demo-release-demo\"}",
            "legendFormat": "{{area}} Memory"
          }
        ]
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "30s"
  }
}
